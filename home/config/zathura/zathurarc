# Open document in fit-width mode by default
set adjust-open "best-fit"

# One page per row by default
set pages-per-row 1

#stop at page boundries
set scroll-page-aware "true"
set scroll-full-overlap 0.01
set scroll-step 100

#zoom settings
set zoom-min 10
set guioptions ""

set render-loading "false"
set scroll-step 50

set statusbar-h-padding 0
set statusbar-v-padding 0
set page-padding 1

# Colorscheme
set notification-error-bg       "#0d1017" # bg
set notification-error-fg       "#d95757" # bright:red
set notification-warning-bg     "#0d1017" # bg
set notification-warning-fg     "#fa8d3e" # bright:yellow
set notification-bg             "#0d1017" # bg
set notification-fg             "#86b300" # bright:green

set completion-bg               "#0d1017" # bg2
set completion-fg               "#c5c8c6" # fg
set completion-group-bg         "#0d1017" # bg1
set completion-group-fg         "#928374" # gray
set completion-highlight-bg     "#399ee6" # bright:blue
set completion-highlight-fg     "#504945" # bg2

# Define the color in index mode
set index-bg                    "#0d1017" # bg2
set index-fg                    "#ebdbb2" # fg
set index-active-bg             "#399ee6" # bright:blue
set index-active-fg             "#0d1017" # bg2

set inputbar-bg                 "#0d1017" # bg
set inputbar-fg                 "#c5c8c6" # fg

set statusbar-bg                "#0d1017" # bg2
set statusbar-fg                "#c5c8c6" # fg

set highlight-color             "#fa8d3e" # bright:yellow
set highlight-active-color      "#ff8f40" # bright:orange

set default-bg                  "#0d1017" # bg
set default-fg                  "c5c8c6" # fg
set render-loading              true
set render-loading-bg           "#0d1017" # bg
set render-loading-fg           "#c5c8c6" # fg

# Recolor book content's color
set recolor-lightcolor          "#0d1017" # bg
set recolor-darkcolor           "#c5c8c6" # fg
set recolor                     "true"
set recolor-keephue              true     # keep original color

# bindings
unmap f
map f toggle_fullscreen
map [fullscreen] f toggle_fullscreen
